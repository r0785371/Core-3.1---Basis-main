<!--nodig om LogIn en LogOut op scherm met opties te tonen-->
@inject SignInManager<Models.ApplicationUser> signInManager;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Info browser tabblad: -->
    <link rel="shortcut icon" href="https://www.portofantwerp.com/favicon.ico" type="image/vnd.microsoft.icon">
    <title >Asset App / @ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <!--toegevoegd om remote validatie op velden te doen op de client-->
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

        <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
        <link href="~/pivot/pivot.min.css" rel="stylesheet" />
        <script src="~/pivot/pivot.min.js"></script>
    </environment>
    <environment exclude="Development">

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=">
        </script>

        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o">
        </script>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
              crossorigin="anonymous"
              integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" />

        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

        <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
        <link href="~/pivot/pivot.min.css" rel="stylesheet" />
        <script src="~/pivot/pivot.min.js"></script>



    </environment>
    
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />
   
    @*<script src="~/lib/jquery/dist/jquery.js"></script>*@

    
    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div style=" width: 80%; margin-left:10%">
                <div <div class=" d-sm-flex">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <!--Logo-->
                        @*<img src="https://www.portofantwerp.com/sites/all/themes/ia_base_theme/logo.png" alt="Port of Antwerp" style="max-width:173.8px;max-height:56.7px;" />*@
                        <img src="https://www.portofantwerp.com/sites/all/themes/ia_base_theme/logo.png" alt="Port of Antwerp" style="max-width:111.232px;max-height:36.288px;" />
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="nav navbar-nav">

                            <!--menubalk niet laten zien indien je niet bent ingelogd-->
                            @if (signInManager.IsSignedIn(User))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Product
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                                        <a class="nav-link text-dark" asp-area="" asp-controller="Hardware" asp-action="Index">Hardware</a>

                                        <div class="dropdown-divider"></div>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Software" asp-action="Index">Software</a>

                                        <div class="dropdown-divider"></div>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Supplier" asp-action="Index">Suppliers</a>
                                    </div>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Purchase
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Purchase" asp-action="Index">Purchase</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="PurchaseItem" asp-action="ListToOrderItems">To order items</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="PurchaseItem" asp-action="ListOrderedItems">Ordered items</a>

                                    </div>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="License" asp-action="Index">License</a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Assets
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Asset" asp-action="Index">Assets</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Asset" asp-action="AssetsNeedBackup">Assets need backup</a>
                                        <div class="dropdown-divider alert-dark"></div>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Asset" asp-action="AssetsOverview">Assets overview</a>
                                        <div class="dropdown-divider alert-dark"></div>
                                        @*<a class="nav-link text-dark" asp-area="" asp-controller="Backup" asp-action="BackupNeededChart">ChartBackup</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="WarningPeriod" asp-action="WarningPeriodChart">ChartWaranty</a>*@
                                    </div>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="OperationalSite" asp-action="Index">Operational Site</a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenu1" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <img src="~/images/icons/configuration_icon.png" style="max-width:30px;max-height:30px" />
                                        Basic Tabels
                                    </a>
                                    <div class="dropdown-menu multi-column" aria-labelledby="navbarDropdownMenu1">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <ul class="dropdown-menu">
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Status" asp-action="Index">Status</a></li>

                                                    <li><div class="dropdown-divider"></div></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="ProductType" asp-action="Index">Product type</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="WarningPeriod" asp-action="Index">Warning period</a></li>

                                                    <li><div class="dropdown-divider"></div></li>
                                                    <li> <a class="nav-link text-dark" asp-area="" asp-controller="Detail" asp-action="Index">Detail</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="DetailMain" asp-action="Index">Detail main</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="DetailSub" asp-action="Index">Detail sub</a></li>

                                                    <li><div class="dropdown-divider"></div></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="BackupType" asp-action="Index">BackupTypes</a></li>

                                                    <li><div class="dropdown-divider"></div></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="SoftwareType" asp-action="Index">Software type</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="LicenseType" asp-action="Index">License type</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="LicenseValidityType" asp-action="Index">License validity type</a></li>

                                                </ul>
                                            </div>

                                            <div class="col-md-6">
                                                <ul class="dropdown-menu">

                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Person" asp-action="Index">People</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="GroupPeople" asp-action="Index">GroupPeople</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Department" asp-action="Index">Departments</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="ExternCompany" asp-action="Index">Extern company (borrow)</a></li>

                                                    <li><div class="dropdown-divider"></div></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Warehouse" asp-action="Index">Warehouse</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Location" asp-action="Index">Location</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Building" asp-action="Index">Buildings</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Floor" asp-action="Index">Floors</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Room" asp-action="Index">Rooms</a></li>

                                                    <li><div class="dropdown-divider"></div></li>

                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="RackLocation" asp-action="Index">Rack Location</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Rack" asp-action="Index">Racks</a></li>
                                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="URack" asp-action="Index">URacks</a></li>

                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Create">Create</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="ChangePassword" asp-controller="Register" class="nav-link text-dark">
                                Password
                            </a>
                        </li>*@


                                @if (!User.IsInRole("Administrator"))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Manage</a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">

                                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Create">Create</a>
                                            <a asp-action="ChangePassword" asp-controller="Register" class="nav-link text-dark">Password</a>

                                        </div>
                                    </li>
                                }






                            }

                            <!--checken of user is ingelogd en heeft Administrator rol-->
                            @if (signInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Manage</a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">

                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Create">Create</a>
                                        <a asp-action="ChangePassword" asp-controller="Register" class="nav-link text-dark">Password</a>

                                        <a asp-action="ListUsers" asp-controller="Administrator" class="dropdown-item">
                                            Users
                                        </a>
                                        <a asp-action="ListRoles" asp-controller="Administrator" class="dropdown-item">
                                            Rolls
                                        </a>
                                        <a asp-action="Overview" asp-controller="Administrator" class="dropdown-item">
                                            Overview
                                        </a>
                                    </div>
                                </li>

                                @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Administrator"
                                asp-action="ListRoles">Beheer Rollen</a>
                        </li>*@

                            }


                            <!--gebruiken van SignInManager object of user is ingelogd-->
                            @if (signInManager.IsSignedIn(User))
                            {
                                <li class="nav-item ml-auto">
                                    <form method="post" asp-action="logout" asp-controller="register">
                                        <button type="submit" class="nav-link btn btn-link">
                                            Logout <small>@User.Identity.Name</small> 
                                        </button>
                                    </form>
                                </li>


                            }
                            else
                            {

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Register">Register</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Login">Login</a>
                                </li>

                            }

                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" id="page">
        <partial name="_CookieConsentPartial" />

        <div id="pageHeader" class="flui">

            <nav class="navbar navbar-light " style="background-color: lightgrey;">
                <h3>@ViewData["PageTitle"]</h3>
                <form class="form-inline">
                    <h4 style="color:blue">@ViewData["PageType"]</h4>
                </form>
            </nav>

        </div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    &copy; @DateTime.Now.Year - Port of Antwerp / App Assets - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
                <div class="col-lg-6">
                    @await Html.PartialAsync("_SelectLanguagePartial")
                </div>
            </div>
        </div>

    </footer>

    @*<script src="~/js/site.js" asp-append-version="true"></script>*@

    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }
   
</body>
</html>
