@model List<Models.PurchaseItem>

<table class="table-sm col-sm-12">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Purchase.Supplier.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Purchase.No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PurchaseQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].WarentyIntervalMonth)
            </th>
            <th width="70"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Purchase.Supplier.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Purchase.No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseQty)
                </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryDate)
                </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.WarentyIntervalMonth)
                </td>
                <td>
                    <a asp-controller="PurchaseItem" asp-action="Edit" asp-route-id="@item.PurchaseItemID"><img src="~/images/icons/Edit.png" style="max-height:30px; max-width:30px" /></a>
                    <a asp-controller="PurchaseItem" asp-action="Details" asp-route-id="@item.PurchaseItemID"><img src="~/images/icons/Clipboard.png" style="max-height:30px; max-width:30px" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
