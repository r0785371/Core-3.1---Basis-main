@model List<Models.Person>

    <table class="table-sm col-sm-12">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model[0].Ref)</th>
                <th>@Html.DisplayNameFor(model => model[0].FullName)</th>
                <th>@Html.DisplayNameFor(model => model[0].Department.Name)</th>
                <th width="70"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ListPeople as List<Models.Person>)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ref)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    <a asp-controller="Person" asp-action="Edit" asp-route-id="@item.PersonID"><img src="~/images/icons/Edit.png" style="max-height:30px; max-width:30px" /></a>
                    <a asp-controller="Person" asp-action="Details" asp-route-id="@item.PersonID"><img src="~/images/icons/Clipboard.png" style="max-height:30px; max-width:30px" /></a>
                </td>
            </tr>
            }
        </tbody>
    </table>