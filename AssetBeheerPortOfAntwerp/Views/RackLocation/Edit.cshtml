@model Models.RackLocation

@{
    ViewData["Title"] = "RackLocation - Edit";
    ViewData["PageTitle"] = "RackLocation";
    ViewData["PageType"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RackLocationID" />
            <div class="form-group">
                <label asp-for="LocationID" class="control-label"></label>
                <select asp-for="LocationID" class="form-control" asp-items="ViewBag.LocationID"></select>
                <span asp-validation-for="LocationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RackID" class="control-label"></label>
                <select asp-for="RackID" class="form-control" asp-items="ViewBag.RackID"></select>
                <span asp-validation-for="RackID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RackNo" class="control-label"></label>
                <input asp-for="RackNo" class="form-control" />
                <span asp-validation-for="RackNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a class="btn btn-outline-info" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
