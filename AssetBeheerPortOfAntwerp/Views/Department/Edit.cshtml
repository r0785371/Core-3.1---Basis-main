@model Models.Department

@{
    ViewData["Title"] = "Department - Edit";
    ViewData["PageTitle"] = "Department";
    ViewData["PageType"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var listPeople = ViewData["ListPeople"] as List<Models.Person>;
    int qtyPeople = listPeople.Count();
    string person = qtyPeople > 1 ? " People" : " Person";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartmentID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />|
                <a class="btn btn-outline-info" asp-action="Index">@Localizer["Back to List"]</a>
            </div>
        </form>
    </div>
</div>


@if (qtyPeople > 0)
{
    <hr />
    <h2>@person</h2>

    <partial name="PartialViews/_ListPeoplePartial" model="@listPeople" />

}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
