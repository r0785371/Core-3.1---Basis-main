@model Models.ProductSupplier

@{
    ViewData["Title"] = "Supplier - Create";
    ViewData["PageTitle"] = "Supplier";
    ViewData["PageType"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SupplierID" class="control-label"></label>
                <select asp-for="SupplierID" class="form-control" asp-items="ViewBag.SupplierID"><option disabled selected>---Select---</option></select>
                <span asp-validation-for="SupplierID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RefSupplier" class="control-label"></label>
                <input asp-for="RefSupplier" class="form-control" />
                <span asp-validation-for="RefSupplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductNameSupplier" class="control-label"></label>
                <input asp-for="ProductNameSupplier" class="form-control" />
                <span asp-validation-for="ProductNameSupplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary" value="Create" asp-route-productID="@ViewData["ProductID"]" asp-route-productChild="@ViewData["productChild"].ToString()">Create</button> |

            @*As this view is used by Software and Hardware, when go back needs to go to the correct controller*@
            @if (ViewData["productChild"].ToString() == "Software")
            {
                <a class="btn btn-outline-info" asp-controller="Software" asp-action="Edit" asp-route-id="@ViewData["ProductID"]">Back to List</a>
            }
            @if (ViewData["productChild"].ToString() == "Hardware")
            {
                <a class="btn btn-outline-info" asp-controller="Hardware" asp-action="Edit" asp-route-id="@ViewData["ProductID"]">Back to List</a>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
