@model Models.ProductSupplier

@{
    ViewData["Title"] = "Supplier - Edit";
    ViewData["PageTitle"] = "Supplier";
    ViewData["PageType"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductSupplierID" />
            <div class="form-group">
                <label asp-for="SupplierID" class="control-label"></label>
                <select asp-for="SupplierID" class="form-control" asp-items="ViewBag.SupplierID"><option disabled selected>---Select---</option></select>
                <span asp-validation-for="SupplierID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RefSupplier" class="control-label"></label>
                <input asp-for="RefSupplier" class="form-control" />
                <span asp-validation-for="RefSupplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductNameSupplier" class="control-label"></label>
                <input asp-for="ProductNameSupplier" class="form-control" />
                <span asp-validation-for="ProductNameSupplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<input type="submit" value="Save" class="btn btn-primary" />*@
                <button type="submit" class="btn btn-primary" value="Save" asp-route-productID="@ViewData["ProductID"]" asp-route-productChild="@Model.Product.ProductType.ProductChild.ToString()">Save</button> |

                @*As this view is used by Software and Hardware, when go back needs to go to the correct controller*@
                @if (Model.Product.ProductType.ProductChild.ToString() == "Software")
                {
                    <a class="btn btn-outline-info" asp-controller="Software" asp-action="Edit" asp-route-id="@ViewData["ProductID"]">Back</a>
                }
                @if (Model.Product.ProductType.ProductChild.ToString() == "Hardware")
                {
                    <a class="btn btn-outline-info" asp-controller="Hardware" asp-action="Edit" asp-route-id="@ViewData["ProductID"]">Back</a>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
