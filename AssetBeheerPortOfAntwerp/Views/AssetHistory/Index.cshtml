@model List<Models.AssetHistory>

@{
    ViewData["Title"] = "Asset history - Index";
    ViewData["PageTitle"] = "Asset history";
    ViewData["PageType"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<div class="text-right">
    <h4><a asp-action="Create">Create New</a></h4>
</div>*@

<table class="table-sm col-12">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Asset.AssetTag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Asset.PurchaseItem.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Status.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].NameUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Description)
            </th>
            <th width="120"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Asset.AssetTag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Asset.PurchaseItem.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AssetHistoryID"><img src="~/images/icons/Edit.png" style="max-height:30px; max-width:30px" /></a> |
                <a asp-action="Details" asp-route-id="@item.AssetHistoryID"><img src="~/images/icons/Clipboard.png" style="max-height:30px; max-width:30px" /></a> |
                <a asp-action="Delete" asp-route-id="@item.AssetHistoryID"><img src="~/images/icons/Delete.png" style="max-height:30px; max-width:30px" /></a>
            </td>
        </tr>
        }
    </tbody>
</table>
