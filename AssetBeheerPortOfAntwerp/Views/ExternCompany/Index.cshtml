@model IEnumerable<Models.ExternCompany>

@{
    ViewData["Title"] = "Extern company - Index";
    ViewData["PageTitle"] = "Extern company";
    ViewData["PageType"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="text-right">
        <h4><a asp-action="Create">@Localizer["Create New"]</a></h4>
    </div>

<table class="table-sm col-12">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ref)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebSite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActief)
            </th>
            <th width="120"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ref)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebSite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActief)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExternCompanyID">
                <img src="~/images/icons/Edit.png" style="max-height:30px; max-width:30px" /></a> |
                <a asp-action="Details" asp-route-id="@item.ExternCompanyID">
                <img src="~/images/icons/Clipboard.png" style="max-height:30px; max-width:30px" /></a> |
                <a asp-action="Delete" asp-route-id="@item.ExternCompanyID">
                <img src="~/images/icons/Delete.png" style="max-height:30px; max-width:30px" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
