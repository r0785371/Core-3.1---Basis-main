@model Models.Location

@{
    ViewData["Title"] = "Location - Delete";
    ViewData["PageTitle"] = "Location";
    ViewData["PageType"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<h3>Are you sure you want to delete this location: </h3>
<h3>@Model.LocationDescription?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Building)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.Ref) - @Html.DisplayFor(model => model.Building.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Floor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Floor.Ref)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomID)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomNo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsWarehouse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsWarehouse)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LocationID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-outline-info" asp-action="Index">Back to List</a>
    </form>
</div>
