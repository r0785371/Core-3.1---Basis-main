@model Models.Purchase
@{
    ViewData["Title"] = "Purchase - Create";
    ViewData["PageTitle"] = "Purchase";
    ViewData["PageType"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<br />
<div class="col-md-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <fieldset class="form-group">
            <legend class="col-sm-3 control-label"></legend>
            <div class="custom-checkbox"></div>
            @{
                for (int i = 0; i < @Model.ListPurchaseTypes.Count(); i++)
                {
                    <input asp-for="@Model.PurchaseTypeID" value="@Model.ListPurchaseTypes[i].PurchaseTypeID" type="radio" />
                    <label asp-for="@Model.ListPurchaseTypes[i].PurchaseTypeID">  @Model.ListPurchaseTypes[i].Name  </label>
                    <input asp-for="@Model.ListPurchaseTypes[i].PurchaseTypeID" type="hidden" />
                }
            }

            <br />
            <br />
            <div class="form-group">
                <label asp-for="SupplierID" class="control-label"></label>
                <select asp-for="SupplierID" class="form-control" asp-items="ViewBag.SupplierID"><option disabled selected>---Select---</option></select>
                <span asp-validation-for="SupplierID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="No" class="control-label"></label>
                <input asp-for="No" class="form-control" />
                <span asp-validation-for="No" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary">Create</button> |
                <a class="btn btn-outline-info" asp-action="Index">Back to List</a>
            </div>
        </fieldset>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
