@model IEnumerable<Models.Supplier>

@{
    ViewData["Title"] = "Suppliers - Index";
    ViewData["PageTitle"] = "Supplier";
    ViewData["PageType"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="text-right">
    <h4><a asp-action="Create">Create New</a></h4>
</div>
<table class="table-sm col-12">
    <thead style="background-color: lightgrey">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceDeskTel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceDeskMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceDeskWeb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasHardware)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasSoftware)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActief)
            </th>
            <th width="100"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(m => m.Name))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceDeskTel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceDeskMail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceDeskWeb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasHardware)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasSoftware)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActief)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SupplierID"><img src="~/images/icons/Edit.png" style="max-height:30px; max-width:30px" /></a>
                    <a asp-action="Details" asp-route-id="@item.SupplierID"><img src="~/images/icons/Clipboard.png" style="max-height:30px; max-width:30px" /></a>
                    <a asp-action="Delete" asp-route-id="@item.SupplierID"><img src="~/images/icons/Delete.png" style="max-height:30px; max-width:30px" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
