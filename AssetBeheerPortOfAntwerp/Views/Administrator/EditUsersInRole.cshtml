@model List<Models.UserRole>

@{
    ViewData["Title"] = "EditUserInRole";
    ViewData["PageTitle"] = "Create or delete users in this role.";
    //ViewData["PageType"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var roleId = ViewBag.roleId;
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUserInRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <div class="card">
                <div class="card-header">
                    <h2>@Localizer["Users"]:</h2>
                </div>
                <div class="card-body">
                   @*lijst van userRole objecten*@
                    @for (int i = 0 ; i < Model.Count; i++)
                    {                        
                    <div class="form-check">
                        @*input element is verborgen en binding met UserId en UserName
                        geeft informatie door naar property van UserRole object*@
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        @*checkbox mee in lijst*@
                        @*asp-for is voor binding*@
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        @*gebruikersnaam tonen*@
                        @*gebruik van asp-for is om naam ook te gebruiken om checkbox aan
        te vinken door op de naam te klikken => label*@
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].UserName
                        </label>
                    </div>

                        

                    }
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <a asp-action="EditRole" asp-route-id="@roleId"
                           class="btn btn-primary">@Localizer["Back"]</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

