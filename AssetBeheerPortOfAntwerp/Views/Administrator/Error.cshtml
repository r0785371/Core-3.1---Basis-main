
@{
    ViewData["Title"] = "Error";
}

@if (ViewBag.ErrorTitle == null)
{
    <h1 class="text-danger">@Localizer["Error"]</h1>
    <h2 class="text-danger">@Localizer["An error occurred while processing your request."]</h2>
    <h5>@Localizer["Please contact your administrator at servicedeskassets@gmail.com"]</h5>
}
else
{
    <h1 class="text-danger">@ViewBag.ErrorTitle</h1>
    <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
    <hr />
    <a asp-action="listroles" asp-controller="administrator">
        @Localizer["Click here to return list of roles"]
    </a>
}


