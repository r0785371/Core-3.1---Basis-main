@model List<Models.UserRoles>

@{
    var UserId = ViewBag.userId;
}


<div class="col-md-4">
    <form asp-action="UserRoles">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card">
            <div class="card-header">
                <h2>@Localizer["Manage user rolls:"]</h2>
            </div>
            <div class="card-body">
                @*lijst van userRole objecten*@
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">
                        @*input element is verborgen en binding met UserId en UserName
                            geeft informatie door naar property van UserRole object*@
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        @*checkbox mee in lijst*@
                        @*asp-for is voor binding*@
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        @*gebruikersnaam tonen*@
                        @*gebruik van asp-for is om naam ook te gebruiken om checkbox aan
                            te vinken door op de naam te klikken => label*@
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].RoleName
                        </label>
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a asp-action="EditUser" asp-route-id="@UserId"
                       class="btn btn-primary">@Localizer["Back"]</a>
                </div>
            </div>
        </div>
    </form>
</div>
