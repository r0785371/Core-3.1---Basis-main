@model IEnumerable<Models.PurchaseItem>

@{
    ViewData["Title"] = "Purchase items - To order";
    ViewData["PageTitle"] = "Purchase items";
    ViewData["PageType"] = "To order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() == 0)
{
    <br />
    <h1>There are no items to be orderded!</h1>
}

@if (Model.Count() > 0)
{
    <br />
    <table class="table-sm col-12">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Purchase.Supplier)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Purchase)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.ProductType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PurchaseQty)
                </th>
                <th>
                    Require date
                    @*@Html.DisplayNameFor(model => model.DeliveryDate)*@
                </th>
                <th width="35"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Purchase.Supplier.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Purchase.No)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductType.Ref)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PurchaseQty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryDate)
                    </td>
                    <td>
                        <a asp-controller="PurchaseItem" asp-action="Edit" asp-route-id="@item.PurchaseItemID"><img src="~/images/icons/Edit.png" style="max-height:30px; max-width:30px" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
